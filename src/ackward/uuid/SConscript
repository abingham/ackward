import build_utils

Import(['env'])

akw_files = [
    'Module.py',
    'UUID.py',
    ]

[env.AkwHeader(akw) for akw in akw_files]
akw_impls = [env.AkwImpl(akw) for akw in akw_files]

sources = [
    'Initialize.cpp',
    ] + akw_impls

build_utils.build_shared_library(env,
                                 'ackward_uuid',
                                 sources,
                                 deps=[])
