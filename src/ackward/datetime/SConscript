import bygg

Import(['env'])

akw_files = [
    'Date.py',
    'DateTime.py',
    'Time.py',
    'TimeDelta.py',
    ]

sources = [
    'Initialize.cpp',
    'Module.cpp',
    'TZInfo.cpp',
    ]

headers = [
    'Initialize.hpp',
    'Module.hpp',
    'TZInfo.hpp',
    ]

bygg.build_shared_library(env,
                          name='datetime',
                          sources=sources,
                          headers=headers,
                          akw_files=akw_files,
                          deps=['time'])
