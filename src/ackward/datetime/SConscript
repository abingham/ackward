import build_utils

Import(['env'])

akw_files = [
    'Date.py',
    'DateTime.py',
    'Time.py',
    'TimeDelta.py',
    ]

sources = [
    'Initialize.cpp',
    'Module.cpp',
    'TZInfo.cpp',
    ]

headers = [
    'Date_akw.hpp',
    'DateTime_akw.hpp',
    'Initialize.hpp',
    'Module.hpp',
    'Time_akw.hpp',
    'TZInfo.hpp',
    ]

build_utils.build_shared_library(env,
                                 name='datetime',
                                 sources=sources,
                                 headers=headers,
                                 akw_files=akw_files,
                                 deps=['time'])
