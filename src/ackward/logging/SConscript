import build_utils

Import(['env'])

akw_files = [
    'Config.py',
    'Filter.py',
    'Formatter.py',
    'Handler.py',
    'Module.py',
    ]

[env.AkwHeader(akw) for akw in akw_files]
akw_impls = [env.AkwImpl(akw) for akw in akw_files]

sources = [
    'Initialize.cpp',
    'Logger.cpp',
    'LoggerAdapter.cpp',
    'LogRecord.cpp',
    'StreamHandler.cpp',
    'Types.cpp',
    ] + akw_impls

build_utils.build_shared_library(env,
                                 'ackward_logging',
                                 sources)
